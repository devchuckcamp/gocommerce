# Sample Project (sample-project)
# Copy this file to .env (which is gitignored) and adjust as needed.

# Enable Postgres mode for the sample API
USE_POSTGRES=1

# Optional: run migrations automatically on startup
# RUN_MIGRATIONS=1

# Preferred: full DSN
DB_DSN=postgres://commerce:commerce@localhost:5432/commerce?sslmode=disable

# Or provide parts (used only if DB_DSN/DATABASE_URL are not set)
DB_DRIVER=postgres
DB_HOST=localhost
DB_PORT=5432
DB_USER=commerce
DB_PASSWORD=commerce
DB_NAME=commerce
